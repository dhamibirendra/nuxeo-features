<?xml version="1.0" encoding="UTF-8"?>

<component name="org.nuxeo.opensocial.dashboard.uiOverride" version="1.0">

  <require>org.nuxeo.ecm.spaces.document.types
  </require>

  <extension target="org.nuxeo.ecm.platform.types.TypeService"
    point="types">

    <type id="Space">
      <label>Space: Not Seen By User</label>
      <description>Not seen by user</description>
      <icon>/icons/space.png</icon>
      <bigIcon>/icons/space.png</bigIcon>
      <default-view>view_documents</default-view>
      <category>none</category>
      <layouts mode="any">
        <layout>heading</layout>
      </layouts>
      <facets>
      </facets>
    </type>

    <type id="Workspace">
      <deniedsubtypes>
        <type>Space</type>
      </deniedsubtypes>
      <subtypes>
        <type hidden="create,paste,edit">Space</type>
       </subtypes>
    </type>
    <type id="Folder">
      <deniedsubtypes>
        <type>Space</type>
      </deniedsubtypes>
      <subtypes>
        <type hidden="create,paste,edit">Space</type>
       </subtypes>
    </type>
    <type id="WorkspaceRoot">
      <deniedsubtypes>
        <type>Space</type>
      </deniedsubtypes>
      <subtypes>
        <type hidden="create,paste,edit">Space</type>
       </subtypes>
    </type>

  </extension>
</component>
