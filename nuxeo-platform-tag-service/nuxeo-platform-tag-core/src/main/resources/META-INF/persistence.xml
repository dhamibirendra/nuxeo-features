<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">

  <persistence-unit name="nxtags">
    <jta-data-source>java:/nxtags</jta-data-source>

    <class>org.nuxeo.ecm.platform.tag.entity.DublincoreEntity</class>
    <class>org.nuxeo.ecm.platform.tag.entity.HierarchyEntity</class>
    <class>org.nuxeo.ecm.platform.tag.entity.TagEntity</class>
    <class>org.nuxeo.ecm.platform.tag.entity.TaggingEntity</class>

    <properties>
      <property name="hibernate.hbm2ddl.auto" value="never"/>
    </properties>
  </persistence-unit>

</persistence>